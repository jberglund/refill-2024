---
import { Content as GreatPost } from "../../presentation.md";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="intro">
    <GreatPost />
  </div>
</Layout>

<style is:global>
  * {
    box-sizing: border-box;
  }
  html {
    color: rgb(179, 195, 225);
    background-color: black;
  }

  :is(h1, h2, h3, h4, h5, h6) {
    text-wrap: balance;
    margin-bottom: 0.5rem;
  }

  p,
  :is(h1, h2, h3, h4, h5, h6) {
    max-width: 40rem;
  }

  p {
    margin-bottom: 0.5rem;
  }
  h1 {
    font-size: 2.5rem;
  }
  h2 {
    font-size: 2rem;
  }
  h3 {
    font-size: 1.5rem;
  }
  h4 {
    font-size: 1.25rem;
  }
  h5 {
    font-size: 1rem;
  }
  ul {
    margin: 0.5rem;
  }
  li + li {
    margin-top: 0.25rem;
  }
  code {
    background: #24292e;
    padding: 0.1rem 0.2rem;
    border-radius: 0.4rem;
    color: #85e89d;
    display: inline-block;
    font-family: monospace;
  }
  .intro {
    display: grid;
    height: 100svh;
    overflow-y: scroll;
    width: 100%;
    max-width: 100vw;
    scroll-snap-type: y mandatory;
  }

  .astro-code {
    width: 100%;
    padding: 0.66rem;
    border-radius: 0.8rem;
  }

  .intro > div {
    min-height: 100vh;
    padding: 3rem;
    display: grid;
    align-content: center;
    min-width: 800px;
    margin: auto;
    scroll-snap-align: center;
  }

  .intro::-webkit-scrollbar {
    width: 4px;
  }

  .intro::-webkit-scrollbar-track {
    box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
  }

  .intro::-webkit-scrollbar-thumb {
    background-color: darkgrey;
    outline: 1px solid slategrey;
  }
  section.heading {
    height: inherit;
    padding: var(--ok-spacing-xl);
    scroll-snap-align: center;
    display: grid;
    align-content: center;
  }
</style>
